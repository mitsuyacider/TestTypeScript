{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "es2015",

    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["./src/ts/**/*.ts"]
}
